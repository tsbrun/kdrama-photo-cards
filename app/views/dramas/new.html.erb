<h1>Add a Drama</h1>

<% if @drama.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@drama.errors.count, "error") %>
      prohibited this drama from being saved:
    </h2>
 
    <ul>
    <% @drama.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= render 'form' %>